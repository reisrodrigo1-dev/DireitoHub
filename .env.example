# =============================================
# Firebase Configuration (get from Firebase Console)
# =============================================
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_PROJECT_ID=direitohub-74b76
VITE_FIREBASE_AUTH_DOMAIN=direitohub-74b76.firebaseapp.com
